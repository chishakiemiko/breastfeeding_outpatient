<div class="top">
  <div class="container">
    <div class="row d-flex border border-2 rounded-3 justify-content-center">
      <div class="col d-flex justify-content-center text-center mt-5">
        <div class="col-8 col-md-6">
        <h2>Edit <%= resource_name.to_s.humanize %></h2>
          <%= form_with model: @hospital, url: session_path(@hospital), class: 'text-center mb-4', local: true do |f| %>
          <%= render 'layouts/validation_error', instance: @hospital %>
          <div class="text-center m-2 p-4 rounded-3 bg-warning-subtle">
            <div class="div-title mb-4">
              <div class="text-start">
                <%= f.label :email, 'email', class: 'title-p fw-bold text-main' %>
                <span class="p_required">必須</span>
                 <%= f.text_field :email, class: 'form-control py-md-3 rounded bg-white box-shadow mb-3 ' %>
              </div>
            </div>
            
            <div class="div-title mb-4">
              <div class="text-start">
                <%= f.label :password, 'password', class: 'title-p fw-bold text-main' %>
                <span class="p_required">必須</span>
              </div>
              <%= f.password_field :password, class: 'form-control py-md-3 rounded bg-white box-shadow mb-3' %>
            </div>
            <div class="col-12 d-flex justify-content-center">
              <%= f.submit 'sign in', class: ' btn btn-danger w-100 d-block rounded fw-bold box-shadow my-5 px-5 py-2 fs-6' %>
            </div>
          <% end %>
          </div>
        </div>
      </div>
    </div>
    </div>
</div>


<%= render "devise/shared/links" %>

